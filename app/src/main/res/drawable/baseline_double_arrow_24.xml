<vector xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="50dp"
    android:height="50dp"
    android:tint="#84CBE7"
    android:viewportWidth="24"
    android:viewportHeight="24">

    <!-- Group to rotate the entire vector -->
    <group
        android:pivotX="12"
        android:pivotY="12"
        android:rotation="-90">
        <!-- First arrow (smallest) -->
        <group
            android:scaleX="0.4"
            android:scaleY="0.4"
            android:translateX="18"
            android:translateY="7">
            <path
                android:fillColor="@android:color/white"
                android:pathData="M5,5l-4.5,0l5,7l-5,7l4.5,0l5,-7z" />
        </group>

        <!-- Second arrow (medium) -->
        <group
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:translateX="11"
            android:translateY="3.5">
            <path
                android:fillColor="@android:color/white"
                android:pathData="M5,5l-4.5,0l5,7l-5,7l4.5,0l5,-7z" />
        </group>

        <!-- Third arrow (largest) -->
        <group
            android:scaleX="1"
            android:scaleY="1"
            android:translateX="-9"
            android:translateY="0">
            <path
                android:fillColor="@android:color/white"
                android:pathData="M15.5,5l-4.5,0l5,7l-5,7l4.5,0l5,-7z" />
        </group>

    </group>
</vector>
